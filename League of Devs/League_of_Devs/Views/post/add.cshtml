<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#!">League of Devs</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Projects</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div style="height:50px"> </div>
    <div class="form-container">
        <form asp-action="add" method="post" asp-controller="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="form-label" asp-for="Title">Project Title:</label>
                <input class="form-input" type="text" id="project-title" asp-for="Title" required>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Summary">Summary:</label>
                <textarea class="form-input" id="summary" asp-for="Summary" required></textarea>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="ThumbImage">Thumbnail Image:</label>
                <input class="form-input" type="file" id="thumbnail" asp-for="ThumbImage" accept="image/*" required>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Content">Content:</label>
                <textarea class="form-input" id="content" asp-for="Content" required></textarea>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Image">Upload Images:</label>
                <input class="form-input" type="file" id="images" asp-for="Image" accept="image/*" multiple>
            </div>
            <p></p>
                <button type="submit">Submit</button>
        </form>
    </div>
            
