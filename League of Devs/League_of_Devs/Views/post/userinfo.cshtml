@model AccountsModel
@using League_of_Devs.Controllers;            

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>League of Devs</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="../css/post.css" rel="stylesheet" />
    <link href="../css/styles.css" rel="stylesheet" />

    <script src="https://cdn.tiny.cloud/1/s1zuonvvfcyl7vbylg8gq4qp36vgs3i7zo5uulplov1d9kzk/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>

<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#!">League of Devs</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Projects</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div style="height:50px"> </div>x
    <div class="form-container">
<form asp-action="userinfo" asp-controller="post" method="post">
    <div class="form-group">
        <label class="form-label" for="name">Name:</label>
        <input class="form-input" value="@loginController.User.Name" type="text" id="name" asp-for="Name" required >
    </div>
    <div class="form-group">
        <label class="form-label" for="bio">Bio:</label>
                <input type="text" class="form-input" id="bio" value="@loginController.User.Bio"  required asp-for="Bio">
    </div>
    <div class="form-group">
        <label class="form-label" for="experience">Experience:</label>
                <input type="text" class="form-input" id="experience" multiple="true" value="@loginController.User.Experience" required asp-for="Experience"></input>
    </div>
    <div class="form-group">
        <label class="form-label">Availability:</label>
        <div>

                    @{
                        if (loginController.User.Availability == "contracted")
                        {
                            <label asp-for="Availability">Available</label>
                            <input type="radio" id="availability-available" name="availability" value="available" checked="false" required asp-for="Availability">
                            <label asp-for="Availability">Contracted</label>
                            <input type="radio" id="availability-contracted" name="availability" value="contracted" checked="true" required asp-for="Availability">

                        }

                        else
                        {
                            <label asp-for="Availability">Available</label>
                            <input type="radio" id="availability-available" name="availability" value="available" checked="true" required asp-for="Availability">
                            <label asp-for="Availability">Contracted</label>
                            <input type="radio" id="availability-contracted" name="availability" value="contracted" checked="false" required asp-for="Availability">

                        }
                    }
        </div>
        <div>
        </div>
    </div>
    <input class="submit-button" type="submit" value="Submit">
</form>
    </div>
    <!-- Page content-->
    <div class="container">
        <div class="row">
            <!-- Blog entries-->
            <div class="col-lg-8">
                <!-- post content here -->

            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">

            </div>
        </div>
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; League of Devs 2024</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>
